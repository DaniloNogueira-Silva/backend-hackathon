generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusConsulta {
  AGENDADA
  REALIZADA
  CANCELADA
}

enum Perfil {
  ADMIN
  PACIENTE
  MEDICO
}

model Usuario {
  id     String @id @default(uuid())
  email  String @unique
  nome   String
  senha  String
  perfil Perfil @default(PACIENTE)

  criadoEm     DateTime @default(now()) @map("criado_em")
  atualizadoEm DateTime @updatedAt @map("atualizado_em")

  perfilPaciente PerfilPaciente?
  perfilMedico   PerfilMedico?
  Consulta       Consulta[]

  @@map("usuarios")
}

model PerfilPaciente {
  id               String   @id @default(uuid())
  dataNascimento   DateTime @map("data_nascimento") @db.Date
  numeroProntuario String   @unique @map("numero_prontuario")
  cpf              String   @unique @map("cpf")
  telefoneContato  String?  @map("telefone_contato")
  endereco         String?

  criadoEm     DateTime @default(now()) @map("criado_em")
  atualizadoEm DateTime @updatedAt @map("atualizado_em")

  usuarioId String  @unique @map("usuario_id")
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  consultasComoPaciente Consulta[] @relation("ConsultaPaciente")
}

model FluxoPasso {
  id             Int     @id @default(autoincrement())
  numeroPasso    Int     @unique
  descricaoAcao  String  @db.Text
  quemAtor       String
  comoDetalhe    String  @db.Text
  canal          String  
  proximoPassoId Int?
  isDecisao      Boolean @default(false)
  passoSimId     Int?
  passoNaoId     Int?

  @@map("fluxo_passo")
}

model Interacao {
  id          Int      @id @default(autoincrement())
  pergunta    String   @db.Text
  respostaIA  String   @db.Text
  dataCriacao DateTime @default(now())

  @@map("interacoes_chat")
}

model RolProcedimento {
  id                  Int      @id @default(autoincrement())
  codigo              String   @db.VarChar(20)
  terminologia        String
  correlacao          Boolean?
  procedimento        String?
  resolucao_normativa String?
  vigencia            String?
  od                  String?
  amb                 String?
  hco                 String?
  hso                 String?
  pac                 String?
  dut                 String?
  subgrupo            String?
  grupo               String?
  capitulo            String?
  tipo                String   @db.VarChar(20)
}

model PerfilMedico {
  id            String @id @default(uuid())
  crm           String @unique
  especialidade String

  criadoEm     DateTime   @default(now()) @map("criado_em")
  atualizadoEm DateTime   @updatedAt @map("atualizado_em")
  usuarioId    String     @unique @map("usuario_id")
  usuario      Usuario    @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  Consulta     Consulta[]

  consultasComoMedico Consulta[] @relation("ConsultaMedico")
}

model Consulta {
  id             String         @id @default(uuid())
  dataHoraInicio DateTime       @map("data_hora_inicio")
  dataHoraFim    DateTime       @map("data_hora_fim")
  status         StatusConsulta @default(AGENDADA)
  anotacoes      String?

  criadoEm     DateTime @default(now()) @map("criado_em")
  atualizadoEm DateTime @updatedAt @map("atualizado_em")

  pacienteId String         @map("paciente_id")
  paciente   PerfilPaciente @relation("ConsultaPaciente", fields: [pacienteId], references: [id])

  medicoId String       @map("medico_id")
  medico   PerfilMedico @relation("ConsultaMedico", fields: [medicoId], references: [id])

  Usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId String?

  PerfilMedico   PerfilMedico? @relation(fields: [perfilMedicoId], references: [id])
  perfilMedicoId String?

  @@map("consultas")
}
